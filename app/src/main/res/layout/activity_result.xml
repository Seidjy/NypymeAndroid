<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:background="?attr/colorPrimary"
      android:elevation="6dp"
      android:minHeight="?attr/actionBarSize"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
      />

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="5dp"
      android:layout_marginTop="5dp"
      app:cardCornerRadius="5dp"

      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:ignore="ExtraText"
        >
      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="10dp"
          android:text="CPF:"
          android:textSize="15sp"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_cpf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:paddingBottom="10dp"
          android:text="12345678910"
          android:textSize="15sp"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_text_view_points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/result_cpf"
          android:layout_centerHorizontal="true"
          android:paddingBottom="10dp"
          android:text="Pontuação"
          android:textSize="15sp"
          />
      <View
          android:id="@+id/result_line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/result_text_view_points"
          android:background="@color/colorPrimary"
          />


      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_text_view_now"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/result_line"
          android:text="Agora tem"
          android:textSize="18sp"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_received_points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="false"
          android:layout_below="@+id/result_text_view_now"
          android:paddingBottom="10dp"
          android:text="13pts"
          android:textSize="15sp"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_text_view_received"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/result_line"
          android:layout_alignParentEnd="true"
          android:text="Recebidos"
          android:textSize="18sp"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_below="@+id/result_text_view_received"
          android:paddingBottom="10dp"
          android:text="23pts"
          android:textSize="18sp"
          />
    </RelativeLayout>

  </android.support.v7.widget.CardView>

