<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="5dp"
      android:layout_marginTop="5dp"
      app:cardCornerRadius="5dp"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CPF:"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_cpf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:text="12345678910"
          />

      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/result_cpf"
          android:text="Pontos atuais:"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_below="@+id/result_cpf"
          android:text="23pts"
          />
      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/result_points"
          android:text="Pontos recebido:"
          />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/result_received_points"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_below="@+id/result_points"
          android:text="13pts"
          />
    </RelativeLayout>

  </android.support.v7.widget.CardView>
  <android.support.v7.widget.AppCompatTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Prêmios adquiríveis"
      android:textSize="26dp"
      android:layout_marginStart="5dp"
      />
  <!--<include layout="@layout/recycler_view_prizes"/>!-->

</LinearLayout>